sensor:
  - platform: mqtt
    state_topic: /espurna/switch/ESPURNA_9F12F7/temperature
    name: espurna_temperature
    unit_of_measurement: "F"
  - platform: mqtt
    state_topic: /espurna/switch/ESPURNA_9F12F7/humidity
    name: espurna_humidity
    unit_of_measurement: "%"

group:
  espurna_dht:
    name: ESPURNA DHT Sensor
    entities:
      - sensor.espurna_temperature
      - sensor.espurna_humidity
